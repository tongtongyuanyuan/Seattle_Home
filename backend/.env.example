# Google Sheets Configuration
# Option 1: Use a file path (recommended for local development)
GOOGLE_SERVICE_ACCOUNT_FILE=secrets/gcp-service-account.json

# Option 2: Use JSON string (for deployment platforms like Render)
# GOOGLE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}'

# Google Sheet ID (from the URL)
# Example: https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID_HERE/edit
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Sheet Tab Names
OPEN_HOUSE_TAB=open_house_picks
LEADS_TAB=leads

# Server Configuration
PORT=8000
